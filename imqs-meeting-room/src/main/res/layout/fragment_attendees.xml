<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abc_ab_share_pack_holo_light"
    android:orientation="horizontal">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_meeting_room"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:paddingTop="50dp"
        android:paddingBottom="80dp"

         />
    <GridView
        android:id="@+id/meeting_room_people"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:columnWidth="110dp"
        android:numColumns="3"
        android:layout_alignParentStart="true"
        android:layout_toEndOf="@+id/fragment_meeting_room"></GridView>
        <!--android:layout_toStartOf="@+id/finished_add_people_button"-->
        <!--android:layout_alignBottom="@+id/finished_add_people_button"-->

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/fragment_detail_button_text"
        android:id="@+id/finished_add_people_button"
        android:layout_alignBottom="@+id/fragment_meeting_room"
        android:focusable="true"
        android:src="@drawable/tick"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:contentDescription="@string/fragment_lobby_button_text"
        android:layout_marginRight="5dp"
        android:clickable="false"
        android:visibility="visible"/>
</RelativeLayout>

